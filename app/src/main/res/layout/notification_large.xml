<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:padding="8dp">
    <TextView
        android:id="@+id/tvWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="20sp"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#FFFFFF"/>
    <TextView
        android:paddingTop="8dp"
        android:layout_below="@+id/tvWord"
        android:id="@+id/tvMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[,nəʊtɪfɪ'keɪʃn]"
        android:textStyle="italic"
        android:textSize="12sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#80FFFFFF"/>
    <TextView
        android:paddingTop="8dp"
        android:layout_below="@+id/tvMark"
        android:id="@+id/tvTranslate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="n. 通知；通告；[法] 告示"
        android:textSize="14sp"
        android:textColor="#A0FFFFFF"/>
    <LinearLayout
        android:paddingTop="8dp"
        android:layout_below="@+id/tvTranslate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgWindows"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/noti_next"/>
        <ImageView
            android:id="@+id/imgLove"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/noti_next"/>
        <ImageView
            android:id="@+id/imgPrevious"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/noti_next"/>
        <ImageView
            android:id="@+id/imgNext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/noti_next"/>
        <ImageView
            android:id="@+id/imgClose"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/noti_next"/>
    </LinearLayout>
</RelativeLayout>
