<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kewenc.noti.Fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="16sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView
        android:layout_marginTop="16dp"
        android:id="@+id/cv2"
        android:layout_below="@+id/abl_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:id="@+id/rl_num"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_notinum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音标选取："
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/font_default"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/font_default"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:id="@+id/cv4"
        android:layout_below="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false">
            <TextView
                android:padding="16dp"
                android:background="@drawable/touch"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_activation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="去除广告"
                android:textSize="16sp"
                android:textColor="@color/font_default"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:id="@+id/cv3"
        android:layout_below="@+id/cv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/touch"
                android:id="@+id/tv_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="给应用评分"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/font_default"/>
            <View
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_below="@+id/tv_grade"
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider"  ></View>
            <TextView
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/touch"
                android:layout_below="@+id/view2"
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常见问题"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/font_default"/>
            <View
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_below="@+id/tv_share"
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?android:attr/listDivider"  ></View>
            <TextView
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/touch"
                android:layout_below="@+id/view3"
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于应用"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/font_default"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
<!--
app:cardUseCompatPadding="true"
-->
